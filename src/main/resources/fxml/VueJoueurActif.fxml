<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="nomDuJoueur" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Pokémon actif :" style="-fx-font-size: 16px;" />
            <Button fx:id="pokemonActif" style="-fx-font-size: 18px;" />
        </HBox>
        <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Énergies :" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
            <HBox fx:id="panneauEnergies" spacing="3" alignment="CENTER_LEFT" />
        </HBox>

        <VBox spacing="5" style="-fx-padding: 5px; -fx-border-color: #999; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-background-color: #f5f5f5;">
            <Label text="Banc" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 0 0 5 0;" />
            <HBox fx:id="panneauBanc" spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5px; -fx-background-color: #eee; -fx-border-radius: 3px; -fx-min-height: 50px;" />
        </VBox>
        <VBox spacing="5" style="-fx-padding: 5px; -fx-border-color: #999; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-background-color: #f5f5f5;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Main" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                <Button text="Piocher une carte" onAction="#piocherCarte" style="-fx-font-size: 12px; -fx-padding: 2px 8px;" />
            </HBox>
            <HBox fx:id="panneauMain" spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5px; -fx-background-color: #eee; -fx-border-radius: 3px; -fx-min-height: 50px;" />
        </VBox>
    </children>
</VBox>
